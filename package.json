{
  "name": "backend-cortex",
  "version": "1.0.0",
  "description": "A restful API for managing lists, built with Express, TypeScript, and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:dev": "tsx --watch src/index.ts",
    "build": "rimraf dist && tsup src/index.ts --format cjs,esm --dts --minify"
  },
  "keywords": [
    "express",
    "typescript",
    "PostgreSQL",
    "drizzle",
    "api"
  ],
  "author": "Leonardo Jibran Machiavelli",
  "license": "ISC",
  "dependencies": {
    "drizzle-orm": "^0.32.1",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.1.0",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.23.1",
    "tsup": "^8.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  }
}
